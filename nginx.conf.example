# this file belongs in /etc/nginx

worker_processes 8;
pid /home/music/itunes-streamer/tmp/pids/nginx.pid;
error_log /home/music/itunes-streamer/log/nginx.error.log;
user music;

events {
  worker_connections 1024;
  accept_mutex on;
  # multi_accept on;
}

http {
  include /etc/nginx/mime.types;
  default_type application/octet-stream;
  access_log /home/music/itunes-streamer/log/nginx.access.log;

  sendfile on;
  tcp_nopush on;
  tcp_nodelay on;
  keepalive_timeout 65;

  gzip on;
  gzip_disable "msie6";

  gzip_vary on;
  gzip_min_length 500;
  gzip_types text/plain text/css application/json application/x-javascript text/xml
             application/xml application/xml+rss text/javascript;

  upstream unicorn_server {
    server unix:/home/music/itunes-streamer/tmp/sockets/unicorn.sock fail_timeout=0;
  }

  server {
    server_name music;
    root /home/music/itunes-streamer/serve;
    listen 80;
    client_max_body_size 1G;
    keepalive_timeout 5;

    location / {
      try_files $uri @app;
    }

    location /music/ {
        alias /home/music/Music/;
        internal;
    }

    location @app {
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_redirect off;
      proxy_pass http://unicorn_server;
      proxy_max_temp_file_size 0;
      proxy_read_timeout 600;
      proxy_send_timeout 600;
      proxy_buffering off;
    }
  }
}
